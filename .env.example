# Database Configuration
POSTGRES_PASSWORD=your_postgres_password_here

# Sentry Configuration (for logging and error tracking)
# Get your DSN from https://sentry.io → Settings → Projects → [Your Project] → Client Keys (DSN)
SENTRY_DSN=https://your-key@sentry.io/your-project-id
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=0.1.2

# Logging Configuration
LOG_LEVEL=INFO

# Mailjet Configuration (for email alerts)
MAILJET_API_KEY=your_mailjet_api_key_here
MAILJET_API_SECRET=your_mailjet_api_secret_here

